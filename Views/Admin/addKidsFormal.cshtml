@model project2.Models.KidsFormal

@{
    Layout = "~/Views/Shared/layout3.cshtml";
}
@using (Html.BeginForm("kidsFormal", "Admin", FormMethod.Post))
{
    <div class="row-fluid">
        <div class="span12 text-center">
            <h2>Add Kid's Formal</h2>
            <br />

            @Html.LabelFor(m => m.Name, "Name ", new { id = "name" })
            @Html.TextBoxFor(m => m.Name, new { type = "text", placeholder = "Name" })
            @Html.ValidationMessageFor(m => m.Name)
            <br /><br />

            @Html.LabelFor(m => m.Price, "Price ", new { id = "price" })
            @Html.TextBoxFor(m => m.Price, new { type = "text", placeholder = "Price" })
            @Html.ValidationMessageFor(m => m.Price)
            <br /><br />

            @Html.LabelFor(m => m.Images, "Image path ", new { id = "image" })
            @Html.TextBoxFor(m => m.Images, new { type = "text", placeholder = "Image" })
            @Html.ValidationMessageFor(m => m.Images)
            <br /><br />
            @Html.LabelFor(m => m.Quantity, "Quanity ", new { id = "q" })
            @Html.TextBoxFor(m => m.Quantity, new { type = "text", placeholder = "Quantity" })
            @Html.ValidationMessageFor(m => m.Quantity)
            <br /><br />
            <button type="submit" class="btn btn-success">Add</button>

        </div>
    </div>

}