@model List<project2.Models.MenCasual>
@{
    Layout = "~/Views/Shared/layout4.cshtml";
}
<div>
    <h2 style="font-size: 400%; text-align: center; font-family: 'Lucida Calligraphy'">Men Casual</h2>
</div>

<div class="row">
</div>

@foreach (var br in Model)
{
     <form action="/Admin/deleteMenCasual?pid=@br.Id" method="post">
    <div class="col-sm-6 col-md-4 hero-feature">
        <div class="thumbnail">
            <img src="@Url.Content(br.Images) " style="height:350px;width:350px" />
            <div class="caption">
                <h4>@br.Name</h4>
                <p> @br.Price <button type="submit" class="btn btn-danger" role="button">Delete</button></p>
            </div>
        </div>
    </div>
</form>
}
